{
  "name": "functions",
  "description": "Firebase Functions for 3arida Next.js app",
  "scripts": {
    "build": "npm run build:next && npm run copy:next && npm run build:functions",
    "build:next": "cd .. && npm run build",
    "copy:next": "rm -rf .next && cp -r ../.next .next && cp -r ../public public && cp ../next.config.js next.config.js",
    "build:functions": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "private": true
}
