{
  "name": "3arida-petition-platform",
  "version": "1.0.0",
  "description": "Modern petition platform for Morocco",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:mobile": "next dev -H 0.0.0.0",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:export": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "firebase:emulators": "firebase emulators:start",
    "test:integration": "jest --testPathPattern=integration",
    "performance:audit": "lighthouse http://localhost:3000 --output=html --output-path=./performance-audit.html",
    "performance:test": "npm run build && npm run start & sleep 5 && npm run performance:audit",
    "deploy:staging": "npm run build:export && firebase deploy --only hosting:staging",
    "deploy:production": "npm run build:export && firebase deploy --only hosting:production",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "deploy:all": "npm run build:export && firebase deploy",
    "predeploy": "npm run lint && npm run type-check && npm run test",
    "postdeploy": "npm run performance:audit"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-email/components": "^1.0.1",
    "@types/nodemailer": "^7.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.3",
    "firebase": "^10.7.1",
    "lucide-react": "^0.553.0",
    "next": "^14.2.35",
    "next-intl": "^4.6.1",
    "next-pwa": "^5.6.0",
    "nodemailer": "^7.0.10",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-email": "^5.0.4",
    "react-firebase-hooks": "^5.1.1",
    "resend": "^6.4.2",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-rtl": "^0.9.0",
    "undici": "^5.28.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.26",
    "fast-check": "^4.3.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^7.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "null-loader": "^4.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "undici": "^5.28.4"
  }
}
